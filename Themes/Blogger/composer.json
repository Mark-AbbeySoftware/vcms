{
  "name": "mgregory/blogger-theme",
  "type": "blaze-theme",
  "description": "An Blaze Blogger bootstrap theme",
  "keywords": [
    "blaze-cms"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Mark Gregory",
      "email": "mark.gregory@gmx.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.4",
    "composer/installers": "~1.0"
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan stylist:publish"
    ],
    "post-update-cmd": [
      "php artisan stylist:publish"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "4.0.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
